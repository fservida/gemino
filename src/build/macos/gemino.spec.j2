    exe,
    a.binaries,
    a.datas,
    strip=False,
    upx=True,
    upx_exclude=[],
    name='gemino',
)
app = BUNDLE(
    coll,
    name='gemino.app',
    icon='src/main/icons/mac/256.png',
    bundle_identifier='ch.francescoservida.gemino',
    version='{{ version }}',
    info_plist={
        'CFBundleVersion': '{{ current_date }}',
        'LSApplicationCategoryType': 'public.app-category.utilities',
    }
)
